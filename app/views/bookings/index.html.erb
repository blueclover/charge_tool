<% provide(:title, "Bookings") %>

<div class="row">
  <aside class="span4">
    <div class="group">
      <%= form_tag survey_bookings_path(@survey), method: 'get' do %>
        <%= label_tag 'Filter' %>
        <%= select_tag(:filter,
                       options_for_select([['None',  nil],
                                           ['Relevant', 'relevant'],
                                           ['No Zip', 'no_zip'],
                                           ['Any Zip', 'with_zip'],
                                           ['CA Zip', 'with_ca_zip']],
                                          selected: @filter)) %><br/>
        <%= hidden_field_tag(:sort, @sort) %>
        <%= submit_tag "Apply Filter", name: nil, class: "btn" %>
      <% end  %>
    </div>
    <div class="group">
      <%= form_tag survey_bookings_path(@survey), method: 'get' do %>
        <%= label_tag 'Sort by' %>
        <%= select_tag(:sort,
                       options_for_select([['Booking ID',  'id'],
                                           ['City', 'city'],
                                           ['Relevance', 'score'],
                                           ['Zip Code', 'zip_code']],
                                          selected: @sort)) %><br/>
        <%= hidden_field_tag(:filter, @filter) %>
        <%= submit_tag "Sort", name: nil, class: "btn" %>
      <% end  %>
    </div>
    <p><%= link_to 'Back to Survey', @survey, class: "btn" %></p>
    <p><%#= link_to 'New Booking', new_survey_booking_path(@survey),
          class: "btn" %></p>
  </aside>
  <div class="span8">
    <div class="simple-table">
      <table id="bookings">
        <tr>
          <th>ID</th>
          <th>City</th>
          <th>Zip Code</th>
          <th># Charges</th>
          <th>Relevance</th>
          <th></th>
        </tr>
        <%= render @bookings %>
      </table>
    </div>
    <%= will_paginate %>
  </div>
</div>
