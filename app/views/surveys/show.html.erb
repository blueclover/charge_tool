<% provide(:title, @survey.name) %>
<div class="row" xmlns="http://www.w3.org/1999/html">
  <aside class="span4">
    <section>
      <h1>
        <%= @survey.name %>
      </h1>
      <p>Created <%= @survey.created_at.strftime("%m/%d/%Y") %></p>
      <p><%= pluralize(@survey.bookings.count, "booking") %></p>
      <p><%= @survey.csv_file %></p>
      <p><%= link_to "Edit Survey", edit_survey_path(@survey), class: "btn" %></p>
      <p><%= link_to "Upload File", upload_survey_path(@survey), class: "btn" %></p>
      <p><%= link_to "View Bookings", survey_bookings_path(@survey), class: "btn" %></p>
    </section>
  </aside>
</div>