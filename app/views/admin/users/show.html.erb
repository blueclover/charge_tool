<% provide(:title, @user.email) %>
<div class="row" xmlns="http://www.w3.org/1999/html">
  <aside class="span4">
    <section>
      <h3>
        <%= @user.email %>
      </h3>
      <%= link_to "Edit User", edit_admin_user_path(@user), class: "btn " %>
      <% if @user != current_user %>
        <%= link_to "Delete User", admin_user_path(@user), method: :delete,
                  confirm: "Are you sure you want to delete this user?",
                  class: "btn "%>
      <% end %>
      <%= link_to "Back to Users", admin_users_path, class: "btn" %>
    </section>
  </aside>
</div>